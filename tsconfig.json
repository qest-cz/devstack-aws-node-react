{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "",
    "outDir": "./dist",
    "lib": [
      "es2020",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./config/**/*.ts",
    "./container/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist-web/**/*",
    "./dist/**/*",
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "cdk.out"
  ]
}
