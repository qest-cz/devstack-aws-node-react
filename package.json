{
    "name": "devstack-aws-node-react",
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap && yarn build",
        "dev:fe": "lerna run --scope 'fe-*' dev",
        "build": "lerna run build",
        "code:check": "lerna run code:check",
        "code:fix": "lerna run code:fix",
        "clean": "lerna run clean",
        "clean:full": "lerna run clean:full",
        "update-package-jsons": "ts-node --script-mode ./packages_base/update-package-jsons.ts \"$(lerna list --all --json)\""
    },
    "devDependencies": {
        "lerna": "^3.22.1",
        "ts-node": "^9.0.0"
    },
    "workspaces": {
        "packages": [
            "packages/backend/*",
            "packages/common/*",
            "packages/frontend/*"
        ],
        "nohoist": [
            "**/jest",
            "**/ts-jest"
        ]
    }
}
